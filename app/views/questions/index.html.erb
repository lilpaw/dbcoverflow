<h1>DBC OVERFLOW</h1>

<p><strong>Quote of the Moment:</strong> <%=@response%></p>

<div class="new-question-form">
  <%= form_for @question do |f| %>
    <%= f.label :title %>:
    <%= f.text_field :title %><br />

    <%= f.label :content %>:
    <%= f.text_field :content %><br />

    <%= f.submit %>
  <% end %>
</div>

<div class="question-list">
  <ul>
  <% ques = @questions.sort_by {|question| question.votecount} %>
  <% ques.reverse.each do |question| %>
  <li class="questions">
    Votes:<span class="votecount"><%= question.votecount %></span>
    Answers:<span class="answerscount"><%= question.answers.count%></span>
    <strong><%= link_to(question) do %>
    <span class="ques-title"><%= question.title %></span></strong><% end %> | <span class="ques-content"><%=   question.content%></span>
  </li>
  <% end %>
  </ul>
</div>

